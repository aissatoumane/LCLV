	</head>

	<style>
		body { 
		background-image: url(assets/css/images/site_background4.jpg);
		background-size: cover;
		background-attachment: fixed;
		background-position: center;
		}
	</style>

	<body>
	<div class="container">
		<div class="header">

			<a href="{{ path('home') }}">
				<h1 id="titre">LA CRISE DE LA VINGTAINE</h1>
			</a>

			<div class="content">
				<ul class="menu">
					{% if is_granted("ROLE_ADMIN") %}
						<li>
							<a href="{{ path('home') }}">Accueil</a>
						</li>
						<li>
							<a href="#">Tableau de bord</a>
						</li>
						<li>
							<a href="{{ path('app_logout') }}">Me déconnecter</a>
						</li>

					{% else %}
						{% if app.user %}
							<li>
								<a href="{{ path('home') }}">Accueil</a>
							</li>
							<li>
								<a href="{{ path('rdv') }}">Prendre rendez-vous</a>
							</li>
							<li>
								<a href="{{ path('contact') }}">Me contacter</a>
							</li>
							<li>
								<a href="{{ path('qui-suis-je') }}">Qui suis-je ?</a>
							</li>
							<li>
								<a href="{{ path('services') }}">Accompagnement orientation scolaire / reconversion professionnelle</a>
							</li>
							<li>
								<a href="{{ path('app_logout') }}">Me déconnecter</a>
							</li>

						{% else %}
							<li>
								<a href="{{ path('home') }}">Accueil</a>
							</li>

							<li>
								<a href="{{ path('qui-suis-je') }}">Qui suis-je ?</a>
							</li>
							<li>
								<a href="{{ path('services') }}">Accompagnement orientation scolaire / reconversion professionnelle</a>
							</li>
							<li>
								<a href="{{ path('rdv') }}">Prendre rendez-vous</a>
							</li>
							<li>
								<a href="{{ path('contact') }}">Me contacter</a>
							</li>
							<li>
								<a href="{{ path('app_register') }}">M'inscrire</a>
							</li>
							<li>
								<a href="{{ path('app_login') }}">Me connecter</a>
							</li>
						{% endif %}
					{% endif %}

				</ul>
				<div class="clr"></div>
			</div>

			{% for flash in app.flashes('success') %}
				<div class="alert alert-success">{{ flash }}</div>
			{% endfor %}

			{% for flash in app.flashes('error') %}
				<div class="alert alert-danger">{{ flash }}</div>
			{% endfor %}

			{% block body%}{% endblock %}

			<script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.6.4/jquery.min.js"></script>

		</body>
	</html>
</html>
